{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare",
            "command": "mkdir",
            "args": ["-p", "build"],
            "options": {
                "cwd": "${workspaceRoot}" 
            }
        },
        {
            "label": "configure",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".." 
            ],
            "options": {
                "cwd": "${workspaceRoot}/build" 
            },
            "dependsOn": ["prepare"]
        },
        {
            "label": "build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build" 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}" 
            },
            "dependsOn": ["configure"]
        }
    ]
}